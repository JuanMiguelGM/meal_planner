<%= form_with(model: meal, local: true) do |form| %>
  <%= form.hidden_field(:kind, value: @meal.kind || params[:kind].to_sym) %>
  <%= form.hidden_field(:date, value: @meal.date || params[:date]) %>

  <div class="field">
    <%= form.label :recipe %>
    <%= form.select :recipe_id, @recipes.collect {|p| [ p.name, p.id ] } %>
    <%= form.submit %>
  </div>

<% end %>
